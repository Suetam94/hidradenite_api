// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Articles {
  id       Int    @id @default(autoincrement())
  title    String
  url      String
  category String
}

model Gallery {
  id          Int     @id @default(autoincrement())
  title       String
  media       Bytes
  description String?
}

model Components {
  id             Int              @id @default(autoincrement())
  component      String
  componentText  ComponentText[]
  componentMedia ComponentMedia[]
}

model ComponentText {
  id          Int        @id @default(autoincrement())
  text        String
  identifier  String?
  component   Components @relation(fields: [componentId], references: [id])
  componentId Int
}

model ComponentMedia {
  id          Int        @id @default(autoincrement())
  title       String
  media       Bytes
  description String?
  identifier  String?
  component   Components @relation(fields: [componentId], references: [id])
  componentId Int
}
